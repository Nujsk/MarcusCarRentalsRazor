@page
@model MarcusCarRentals.Pages.UserOrders.DisplayOrdersModel
@{
}
<h2>Your Orders</h2>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["OrderDeleted"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["OrderDeleted"]
    </div>
}
@if (Model != null)
{
    <p>Active orders:</p>
    <table>
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Car Brand</th>
                <th>Car Model</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.ActiveOrders)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.StartDate.ToString("yyyy-MM-dd")</td>
                    <td>@order.EndDate.ToString("yyyy-MM-dd")</td>
                    <td>@order.Car.Brand</td>
                    <td>@order.Car.Model</td>
                    <td>
                        <form method="post" asp-page="/UserOrders/Delete" onsubmit="return confirm('Are you sure you want to delete this order?');">
                            <input type="hidden" name="id" value="@order.OrderId" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <p>Past orders:</p>
    <table>
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Car Brand</th>
                <th>Car Model</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.PastOrders)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.StartDate.ToString("yyyy-MM-dd")</td>
                    <td>@order.EndDate.ToString("yyyy-MM-dd")</td>
                    <td>@order.Car.Brand</td>
                    <td>@order.Car.Model</td>
                </tr>
            }
    </table>
}
else
{
    <p>No orders found for this user.</p>

}
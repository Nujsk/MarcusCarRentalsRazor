@page
@model MarcusCarRentals.Pages.AdminOrder.DeleteModel

@{
    ViewData["Title"] = "Delete";
}
<link rel="stylesheet" href="/css/AdminOrderDelete.css" />
<h1 class="page-title">Delete</h1>

<h3 class="confirmation-message">Are you sure you want to delete this?</h3>
<div class="order-details-container">
    <h4 class="section-title">Order</h4>
    <hr class="section-divider" />
    <dl class="row">
        <dd class="col-sm-10 label">
            @Html.DisplayNameFor(modelItem => Model.Order.UserId)
        </dd>
        <dt class="label">
            @Html.DisplayFor(modelItem => Model.Order.UserId)
        </dt>
        <dd class="label">
            @Html.DisplayNameFor(modelItem => Model.Order.CarId)
        </dd>
        <dt class="label">
            @Html.DisplayFor(modelItem => Model.Order.CarId)
        </dt>
        <dt class="col-sm-2 label">
            @Html.DisplayNameFor(model => model.Order.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.StartDate)
        </dd>
        <dt class="col-sm-2 label">
            @Html.DisplayNameFor(model => model.Order.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.EndDate)
        </dd>
    </dl>

    <form method="post" class="delete-form">
        <input type="hidden" asp-for="Order.OrderId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index" class="back-link">Back to List</a>
    </form>
</div>
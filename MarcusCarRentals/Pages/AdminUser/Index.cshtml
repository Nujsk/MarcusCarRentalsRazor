@page
@model MarcusCarRentals.Pages.AdminUser.IndexModel

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="/css/AdminUserIndex.css"/>

<h1 class="page-title">Index</h1>

<p class="create-link">
    <a asp-page="Create">Create New</a>
</p>
<table class="data-table">
    <thead>
        <tr>
            <th>
                Email
            </th>
            <th>
                Password
            </th>
            <th>
                IsAdmin
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Users)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsAdmin)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.UserId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.UserId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.UserId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
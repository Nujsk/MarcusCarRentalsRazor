@page
@model MarcusCarRentals.Pages.AdminUser.DeleteModel

@{
    ViewData["Title"] = "Delete";
}
<link rel="stylesheet" href="/css/AdminUserDelete.css"/>

<h1>Delete</h1>

<h3 class="confirmation-message">Are you sure you want to delete this?</h3>
<div class="user-details-container">
    <h4 class="section-title">User</h4>
    <hr class="section-divider" />
    <dl class="row">
        <dt>
            @Html.DisplayNameFor(model => model.User.UserId)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.UserId)
        </dd>
        <dt class="col-sm-2 label">
            @Html.DisplayNameFor(model => model.User.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
        <dt class="col-sm-2 label">
            @Html.DisplayNameFor(model => model.User.Password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Password)
        </dd>
    </dl>

    <form method="post" class="delete-form">
        <input type="hidden" asp-for="User.UserId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index" class="back-link">Back to List</a>
    </form>
</div>
